
<main class="container" style="min-height: 300px; margin-top: 100px">
  
  <div class="row">
    <div class="col response">
    </div>
  </div>



  <div class="row mb-2 d-flex justify-content-center">

    <div class="col-6">
      <button class="btn signup-toggle btn-primary w-100">Sign Up</button>

    </div>

    <div class="col-6"> 
      <button class="btn login-toggle btn-success w-100">Login</button>

    </div>

  </div>


  <div class="row">
    
    <div class="col-12 mx-auto">


      <form class="border mx-auto signup-form bg-light shadow" style="min-height: 300px">

        <div class="form-group my-3">
          <label for="username-signup" class="text-primary">Username: </label>
          <input class="form-input w-100 px-2" type="text" id="username-signup">
        </div>
      <div class="form-group my-3 ">
        <label for="email-signup" class="text-primary">Email:</label>
        <input class="form-input w-100 px-2" type="text" id="email-signup" />
      </div>
      <div class="form-group my-3">
        <label for="password-signup" class="text-primary">Password:</label>
        <input class="form-input w-100 px-2" type="password" id="password-signup" />
      </div>
      <div class="form-group d-flex justify-content-center">
        <button class="btn btn-primary w-20 submit-button" type="submit">Sign Up</button>
      </div>
    </form>



    <form class="border mx-auto login-form bg-light shadow" style="min-height: 300px">

        <div class="form-group my-3">
          <label for="email-login" class="text-success">Email:  </label>
          <input class="form-input w-100 px-2" type="text" id="email-login">
        </div>
      <div class="form-group my-3">
        <label for="password-login" class="text-success">Password:</label>
        <input class="form-input w-100 px-2" type="password" id="password-login" />
      </div>
      <div class="form-group d-flex justify-content-center">
        <button class="btn btn-success w-20 submit-button" type="submit">Login</button>
      </div>
      </form>

    </div>
  </div>



</main>

















